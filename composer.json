{
    "name": "gtdxyz/flarum-ext-money-plus",
    "description": "Give money to your users for different actions.",
    "type": "flarum-extension",
    "license": "MIT",
    "support": {
        "source": "https://github.com/daocatt/flarum-ext-money-plus"
    },
    "require": {
        "flarum/core": "^1.8"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "3.*"
    },
    "autoload": {
        "psr-4": {
            "Gtdxyz\\Money\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Money",
            "category": "feature",
            "icon": {
                "name": "fas fa-money-bill",
                "backgroundColor": "#FFD700",
                "color": "#85bb65"
            },
            "optional-dependencies": [
                "flarum/likes",
                "askvortsov/flarum-auto-moderator"
            ]
        }
    }
}
